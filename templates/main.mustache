{{!
    @template block_cinfo/main

    This template will render the block content.

}}

<div id="scroll-left" class="d-none scrollnav"><i class="fa fa-chevron-left"></i></div><div id="scroll-right" class="d-none scrollnav"><i class="fa fa-chevron-right"></i></div>
<div id="toolbar" class="my-1 position-relative {{moodleversion}} d-flex align-items-center">
    {{#showsearch}}
    <div id="modarray" data-modarray="{{modarray}}"></div>
    {{^searchexpand}}
    <span class="cinfo-btn border-0" id="btn-search" data-toggle="tooltip" data-placement="top"
            data-original-title="{{#str}}search,block_cinfo{{/str}}"><i class="fa fa-search fa-lg"></i></span>
    {{/searchexpand}}
    {{/showsearch}}

    {{#showprogress}}
        {{^hascriteria}}
        <span class="cinfo-btn font-weight-bold" id="btn-progress" data-toggle="tooltip" data-placement="top"
        data-original-title="{{#str}}progress,block_cinfo{{/str}}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bar-chart-fill mr-2" viewBox="0 0 16 16">
  <path d="M1 11a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1zm5-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1zm5-5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1z"/>
</svg>{{progress}}%</span>
        {{/hascriteria}}
        {{#hascriteria}}
        <a class="cinfo-btn font-weight-bold" id="btn-progress" href="{{progressurl}}" data-toggle="tooltip" data-placement="top"
        data-original-title="{{#str}}progress,block_cinfo{{/str}}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bar-chart-fill mr-2" viewBox="0 0 16 16">
  <path d="M1 11a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1zm5-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1zm5-5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1z"/>
</svg>{{progress}}%</a>
        {{/hascriteria}}
    {{/showprogress}}

    {{#showgrade}}
        <a class="cinfo-btn font-weight-bold" id="btn-grade" href="{{gradeurl}}" data-toggle="tooltip" data-placement="top"
        data-original-title="{{#str}}gradenoun{{/str}}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list-check mr-2" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M5 11.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5M3.854 2.146a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708L2 3.293l1.146-1.147a.5.5 0 0 1 .708 0m0 4a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708L2 7.293l1.146-1.147a.5.5 0 0 1 .708 0m0 4a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 0 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0"/>
</svg>{{grade}}%</a>
    {{/showgrade}}

    {{#showcourseinfo}}
        <span class="cinfo-btn" id="btn-courseinfo"  data-contextid="{{contextid}}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle-fill" viewBox="0 0 16 16">
  <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16m.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2"/>
</svg><span class="ml-2">{{{courseinfotitle}}}</span></span>
        <div id="courseinfo-title" class="d-none">
            {{{courseinfotitle}}}
        </div>
    {{/showcourseinfo}}

    {{#shownews}}
        <a class="cinfo-btn" id="btn-news" href="{{newsurl}}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-megaphone-fill mr-2" viewBox="0 0 16 16">
  <path d="M13 2.5a1.5 1.5 0 0 1 3 0v11a1.5 1.5 0 0 1-3 0zm-1 .724c-2.067.95-4.539 1.481-7 1.656v6.237a25 25 0 0 1 1.088.085c2.053.204 4.038.668 5.912 1.56zm-8 7.841V4.934c-.68.027-1.399.043-2.008.053A2.02 2.02 0 0 0 0 7v2c0 1.106.896 1.996 1.994 2.009l.496.008a64 64 0 0 1 1.51.048m1.39 1.081q.428.032.85.078l.253 1.69a1 1 0 0 1-.983 1.187h-.548a1 1 0 0 1-.916-.599l-1.314-2.48a66 66 0 0 1 1.692.064q.491.026.966.06"/>
</svg>{{#str}}news,block_cinfo{{/str}}{{#unreadposts}}<span class="badge badge-danger ml-2">{{unreadposts}}</span>{{/unreadposts}}</a>
    {{/shownews}}

    {{#showreport}}
        <a class="cinfo-btn" id="btn-report" href="{{{reporturl}}}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-table mr-2" viewBox="0 0 16 16">
  <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm15 2h-4v3h4zm0 4h-4v3h4zm0 4h-4v3h3a1 1 0 0 0 1-1zm-5 3v-3H6v3zm-5 0v-3H1v2a1 1 0 0 0 1 1zm-4-4h4V8H1zm0-4h4V4H1zm5-3v3h4V4zm4 4H6v3h4z"/>
</svg>{{#str}}report,block_cinfo{{/str}}</a>
    {{/showreport}}

    {{#showvr}}
    <a class="cinfo-btn" id="btn-vr" href="{{vrurl}}" target="_blank">{{#pix}}{{vrtype}},block_cinfo{{/pix}}{{#vrlabel}}<span class="ml-2">{{vrlabel}}</span>{{/vrlabel}}</a>
    {{/showvr}}

    {{#showcr}}
    <a class="cinfo-btn" id="btn-cr" href="{{crurl}}" target="_blank">{{#pix}}{{crtype}},block_cinfo{{/pix}}{{#crlabel}}<span class="ml-2">{{crlabel}}</span>{{/crlabel}}</a>
    {{/showcr}}

    {{#showfolder}}
    <a class="cinfo-btn" id="btn-folder" href="{{folderurl}}" target="_blank">{{#pix}}{{foldertype}},block_cinfo{{/pix}}{{#folderlabel}}<span class="ml-2">{{folderlabel}}</span>{{/folderlabel}}</a>
    {{/showfolder}}
</div>
<div id="cinfo-block-search" class="autocomplete {{^searchexpand}}d-none{{/searchexpand}} position-absolute w-100 my-1">
        <div class="input-group {{#searchexpand}}w-100{{/searchexpand}}">
            <input type="text" id="modsearch" class="form-control"
                placeholder="{{#str}}typetosearch,block_cinfo{{/str}}">
            <div class="input-group-append {{^searchexpand}}search-close cursor-pointer{{/searchexpand}}">
                <span class="input-group-text">
                    <i class="fa fa-{{#searchexpand}}magnifying-glass{{/searchexpand}}{{^searchexpand}}times{{/searchexpand}}"></i>
                </span>
            </div>
        </div>

        <ul id="searchresults" class="list-group mt-1 shadow-sm"></ul>

</div>

{{#js}}
require(['jquery','block_cinfo/main'], function ($,cinfo) {
    cinfo.init();
});
{{/js}}